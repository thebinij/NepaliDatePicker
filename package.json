{
  "name": "bikram-sambat-date-picker-svelte",
  "version": "1.0.0",
  "description": "Date and time picker for Svelte",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit package && vite build",
    "build:package": "svelte-kit package",
    "build:site": "vite build",
    "preview": "vite preview",
    "lint": "prettier --check --plugin-search-dir=. src *.js && eslint src *.js && svelte-check",
    "format": "prettier --write --plugin-search-dir=. src *.js && eslint --fix src *.js",
    "test": "jest tests",
    "test:coverage": "jest --collect-coverage --collectCoverageFrom=src/lib/**"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "1.0.0-next.39",
    "@sveltejs/kit": "1.0.0-next.405",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "babel-jest": "^28.1.3",
    "date-fns": "^2.29.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^28.1.3",
    "mdsvex": "^0.10.6",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.54.4",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "svelte2tsx": "^0.5.13",
    "ts-jest": "^28.0.7",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.7"
  },
  "license": "MIT",
  "homepage": "https://date-picker-svelte.kasper.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/probablykasper/date-picker-svelte.git"
  },
  "bugs": {
    "url": "https://github.com/probablykasper/date-picker-svelte/issues"
  },
  "author": {
    "name": "Kasper Henningsen",
    "url": "https://kasper.space"
  },
  "keywords": [
    "date",
    "time",
    "date-picker",
    "datepicker",
    "date-time-picker",
    "calendar",
    "svelte",
    "front-end"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  }
}
